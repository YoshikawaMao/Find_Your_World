<div class="container">
  <div class="row">
    <div class="col-md-2 mx-auto mt-5 ">
      <table class="table table-sm">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= link_to genre.name, user_search_path('search[value]': genre.id,) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-10 mt-4">
      <% if @datas.empty? %>
        <h2>該当する作品はありません</h2>
      <% else %>
        <div class="d-flex flex-wrap mt-2 mb-4">
          <% @datas.each do |data| %>
            <div class="flex_container mr-4 mt-2">
              <div>
                <%= link_to data.title,  user_anime_path(data) %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>