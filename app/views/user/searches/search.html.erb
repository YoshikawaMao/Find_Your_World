<div class="container">
    <div class="row">
      <div class="col-md-4 mx-auto mt-5 ">
        <ul class="list-group mt-5">
          <li class="list-group-item"><strong>ジャンル検索</strong></li>
          <% @genres.each do |genre| %>
            <li class="list-group-item">
              <%= link_to genre.name, user_search_path('search[value]': genre.id) %>
            </li>
          <% end %>
        </ul>
        &emsp;<%= link_to "アニメ一覧に戻る", user_animes_path %>
      </div>
      <div class="col-8 mt-4">
        <% if @datas.empty? %>
          <h2>該当する作品はありません</h2>
        <% else %>
          <div class="col-8 mt-4">
            <% @datas.each do |data| %>
              <div class="container mr-4 mt-6 mb-2">
                <div>
                  <%= link_to data.title,  user_anime_path(data) %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
        <%= paginate @datas %>
      </div>
    </div>
</div>