<table>
  <% comments.each do |comment| %>
    <tr>
      <td><%= comment.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <td><%= comment.comment_content %></td>
      <td>
        <%= link_to "削除する", admin_anime_comment_path(comment.anime, comment) , method: :delete, :class => "btn btn-outline-danger", data: {confirm: "削除しますか？"} %>
      </td>
    </tr>
  <% end %>
</table>