<div class="container">
  <div class="row">
    <div class="col-md-3 mx-auto">
      <% if @anime.errors.any? %>
        <%= @anime.errors.count %>件のエラーが発生しました
        <% @anime.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
      <h3>アニメタイトル編集</h3>
    </div>
  </div>
  <%= form_with model:@anime, url:admin_anime_path(@anime), local:true do |f| %>
    <div class="row">
      <div class="col-6 mx-auto text-center mt-5">
        <h5>アニメタイトル</h5>
      </div>
    </div>
    <div class="row">
      <div class="col-6 mx-auto text-center mt-2">
        <%= f.text_field :title  %>
      </div>
    </div>
    <div class="row">
      <div class="col-6 mx-auto text-center mt-2">
        <%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "選択してください"})%>
      </div>
    </div>
    <div class="row">
      <div class="col-6 mx-auto text-center mt-2">
        <%= f.submit "変更を保存", :class => "btn btn-outline-secondary" %>
      </div>
    </div>
  <% end %>
</div>