<div class="container">
    <div class="row">
      <div class="col-md-3 mx-auto text-center">
        <% if @genre.errors.any? %>
          <%= @genre.errors.count %>件のエラーが発生しました
          <% @genre.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        <h3>ジャンル編集</h3>
      </div>
    </div>
    <%= form_with model:@genre, url:admin_genre_path(@genre), local:true do |f| %>
      <div class="row">
        <div class="col-6 mx-auto text-center mt-5">
          <h5>ジャンル名</h5>
        </div>
      </div>
      <div class="row">
        <div class="col-6 mx-auto text-center mt-2">
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="row">
        <div class="col-6 mx-auto text-center mt-2">
          <%= f.submit "変更を保存", :class => "btn btn-outline-secondary" %>
        </div>
      </div>
    <% end %>
</div>