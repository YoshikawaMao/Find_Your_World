<div class="container">
  <div class="row">
    <div class="col-md-3 mx-auto">
      <h3>ジャンル編集</h3>
    </div>
  </div>
  <%= form_with model:@genre, url:admin_genre_path(@genre), local:true do |f| %>
    <div class="row">
      <div class="col-2">ジャンル名</div>
      <div class="col-3"><%= f.text_field :name  %></div>
      <div class="col-2">
        <%= f.submit "変更を保存", :class => "btn btn-outline-secondary btn-block" %>
      </div>
    </div>
  <% end %>
</div>