<div class="container">
    <div class="row">
      <div class="col-md-3 mx-auto text-center">
        <h3>声優名編集</h3>
      </div>
    </div>
    <%= form_with model:@voice, url:admin_voice_path(@voice), local:true do |f| %>
      <div class="row">
        <div class="col-6 mx-auto text-center mt-5">
          <h5>声優名</h5>
        </div>
      </div>
      <div class="row">
        <div class="col-6 mx-auto text-center mt-2">
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="row">
        <div class="col-6 mx-auto text-center mt-2">
          <%= f.submit "変更を保存", :class => "btn btn-outline-secondary" %>
        </div>
      </div>
    <% end %>
</div>

