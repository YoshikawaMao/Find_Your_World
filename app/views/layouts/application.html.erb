<!DOCTYPE html>
<html>
  <head>
    <title>FindYourWorld</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-expand-lg" >
      <div class="container my-3" >
        <span><%= link_to "", root_path, class: "fab fa-earlybirds fa-3x" %></span>
        <% if user_signed_in? %>
          <ul class="navbar-nav">
            <span class="nav-item-content">ようこそ <%= current_user.name %>さん！</span>
            <li class="nav-item mx-2">
              <%= link_to " アニメ", user_animes_path, class: "btn btn-outline-success" %>
            </li>
            <li class="nav-item">
              <%= link_to " 声優", user_voices_path, class: "btn btn-outline-success" %>
            </li>
            <li class="nav-item mx-2">
              <%= link_to " メッセージ", user_messages_path, class: "btn btn-outline-success" %>
            </li>
            <li class="nav-item">
              <%= link_to " ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline-success" %>
            </li>
          </ul>
        <% elsif admin_signed_in? %>
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to " アニメ", admin_animes_path, class: "btn btn-outline-dark" %>
            </li>
            <li class="nav-item mx-2">
              <%= link_to " 声優", admin_voices_path, class: "btn btn-outline-dark"  %>
            </li>
            <li class="nav-item">
              <%= link_to " ジャンル", admin_genres_path, class: "btn btn-outline-dark" %>
            </li>
            <li class="nav-item mx-2">
              <%= link_to " メッセージ", admin_messages_path, class: "btn btn-outline-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to " ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-dark" %>
            </li>
          </ul>
        <% else %>
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to " アニメ", user_animes_path, class: "btn btn-outline-primary" %>
            </li>
            <li class="nav-item mx-2">
              <%= link_to " 声優", user_voices_path, class: "btn btn-outline-primary" %>
            </li>
            <li class="nav-item">
              <%= link_to " 新規登録", new_user_registration_path, class: "btn btn-outline-primary" %>
            </li>
            <li class="nav-item mx-2">
              <%= link_to " ログイン", new_user_session_path, class: "btn btn-outline-primary" %>
            </li>
            <li>
              <%= link_to " 管理者ログイン", new_admin_session_path, class: "btn btn-outline-primary" %>
            </li>
          </ul>
        <% end %>
      </div>
    </header>
    <div class="flash ml-5"><%= flash[:notice] %></div>
    <%= yield %>
    <footer class="fixed-bottom text-right mx-3">
      Find_Your_Wrold
    </footer>
  </body>
</html>
